@model IEnumerable<Store.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-primary">Lista de Empleados</h2><hr />

<p>
    @Html.ActionLink("Nuevo Empleado", "Create", new { }, new { @class="btn btn-primary"})
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dni)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BornDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dni)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BornDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FileNumber)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.EmployeeId }, new { @class="btn btn-success"}) |
            @Html.ActionLink("Detailles", "Details", new { id=item.EmployeeId } , new { @class="btn btn-info"}) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.EmployeeId },  new { @class="btn btn-danger"})
        </td>
    </tr>
}

</table>
