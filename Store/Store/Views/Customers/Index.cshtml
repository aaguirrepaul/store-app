@model IEnumerable<Store.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-primary">Listado de Clientes</h2><hr />

<p>
    @Html.ActionLink("Nuevo Cliente", "Create", new { }, new { @class="btn btn-primary"})
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dni)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BornDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CardNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpirationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cvv)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dni)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BornDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CardNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpirationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cvv)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CustomerId }, new { @class="btn btn-success btn-sm"}) |
            @Html.ActionLink("Detalle", "Details", new { id=item.CustomerId }, new { @class="btn btn-warning btn-sm"}) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.CustomerId } , new { @class="btn btn-danger btn-sm"})
        </td>
    </tr>
}

</table>
